{% set curriculum_block_base_class = curriculum_block_base_class|default("curriculum-block") %}

<div {{ bem(curriculum_block_base_class, curriculum_block_modifiers, curriculum_blockname)}}>
  <div {{ bem('intro', [], curriculum_block_base_class) }}>
    {% include "@atoms/02-text/00-headings/_heading.twig" with {
      heading: curriculum_block_heading,
      heading_level: 2
    } %}
    {% block curriculum_block_intro %}
      <p>{{ curriculum_block_intro }}</p>
    {% endblock %}
  </div>
  <div {{ bem('courses', [], curriculum_block_base_class) }}>
    {% block curriculum_block_courses %}
      {% for course in courses %}
        {% include "@organisms/curriculum/course.twig" with {
          course_number: course.number,
          course_title: course.title,
          course_url: course.url,
          course_credits: course.credits,
          course_description: course.description
        } %}
      {% endfor %}
    {% endblock %}
  </div>
</div>
