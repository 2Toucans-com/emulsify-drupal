{% set icon_with_text_base_class = icon_with_text_base_class|default('icon-with-text') %}

<div {{ bem(icon_with_text_base_class, icon_with_text_modifiers, icon_with_text_blockname) }}>
  {% if icon_with_text_href %}<a target='_blank' class='icon-link' href='{{ icon_with_text_href }}'>{% endif %}
  {% block icon %}
    {% include "@atoms/04-images/icons/_icon.twig" with {
      icon_name: icon_with_text_icon_name,
      icon_blockname: icon_with_text_base_class,
      icon_modifiers: icon_with_text_modifiers
    } %}
  {% endblock %}

  {% block text %}
    {% include "@atoms/02-text/text/_text.twig" with {
      text_content: icon_with_text_label,
      text_blockname: icon_with_text_base_class,
      text_modifiers: icon_with_text_modifiers
    } %}
  {% endblock %}

  {% if icon_with_text_href %}</a>{% endif %}

</div>
