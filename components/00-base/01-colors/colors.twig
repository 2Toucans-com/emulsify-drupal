{% set colors_base_class = "sg-colors" %}

<div {{ bem(colors_base_class) }}>
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: 2,
    heading: colors_heading,
  } %}

  {% for palette in palettes %}
    {% include "@atoms/text/headings/_heading.twig" with {
      heading_level: 3,
      heading: palette.palette_heading,
    } %}
    <ul {{ bem('ul', [], colors_base_class) }}>
      {% for color in palette.colors %}
        {% set color_machine = color|lower|replace({' ': '-'}) %}
        <li {{ bem("list", [color_machine], colors_base_class) }}>
          <div {{ bem("sg-info") }}>
            <span>{{ color }}</span> <br/>
            {# <code>{{ color_machine }}</code> #}
          </div>
        </li>
      {% endfor %}
    </ul>
  {% endfor %}
</div>
