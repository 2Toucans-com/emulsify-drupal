  {% include "@atoms/text/headings/_heading.twig" with {
    "heading_level": 2,
    "heading": grid_label,
  } %}
{% endif %}
<div {{ bem(grid_base_class, grid_modifiers, grid_blockname) }}>
  {% block grid_content %}
    {% for item in items %}
      {% include "@organisms/grid/_grid-examples.twig" %}
    {% endfor %}
  {% endblock %}
</div>
