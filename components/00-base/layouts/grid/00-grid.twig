{% set grid_base_class = grid_base_class|default('grid') %}

<div {{ bem('wrap', (grid_modifiers), grid_blockname, grid_extra_classes) }}>
  <div {{ bem('wrap-inner', (grid_modifiers), grid_blockname) }}>
    {% if grid_label %}
      {% include "@atoms/02-text/00-headings/_heading.twig" with {
        heading_level: 2,
        heading: grid_label,
        heading_blockname: grid_heading_blockname|default(grid_blockname),
        heading_modifiers: grid_heading_modifiers,
      } %}
    {% endif %}
    <div {{ bem(grid_base_class, (grid_inner_modifiers), grid_blockname) }}>
      {% block grid_content %}
        {% for item in items %}
          <div class="grid__item">{{ item }}</div>
        {% endfor %}
      {% endblock %}
    </div><!-- grid -->
  </div><!-- wrap-inner -->
</div>
