{#
/**
 * @file
 * Theme override to display primary and secondary local tasks.
 *
 * Available variables:
 * - primary: HTML list items representing primary tasks.
 * - secondary: HTML list items representing primary tasks.
 *
 * Each item in these variables (primary and secondary) can be individually
 * themed in menu-local-task.html.twig.
 */
#}
{% set tabs_base_class = 'tabs' %}

{% set tabs_attributes = {
  class: bem(tabs_base_class, tabs_modifiers, tabs_blockname, 'no-js'),
} %}

{# Drupal admin tabs Specific #}
{% if primary %}
  <h2 class="visually-hidden">{{ 'Primary tabs'|t }}</h2>
  <ul class="tabs__nav tabs__nav--local-tasks">{{ primary }}</ul>
{% endif %}
{% if secondary %}
  <h2 class="visually-hidden">{{ 'Secondary tabs'|t }}</h2>
  <ul>{{ secondary }}</ul>
{% endif %}

{# Javascript tabs #}
{% if not primary %}
{{ attach_library('nyusteinhardt/tabs') }}
  <div {{ add_attributes(tabs_attributes) }}>
    <ul {{ bem('nav', '', tabs_base_class) }}>
      {% block tabs_links %}
        {% for key, listItem in listItems.three %}
          {% include "@atoms/09-menu/tab/tab.twig" with {
            tab_link: "#tab-" ~ key,
            tab_text: listItem.month.long
          } %}
        {% endfor %}
      {% endblock %}
    </ul>
    {% block tab_content %}
      {% for key, listItem in listItems.three %}
        <div class="tabs__tab{% if key == 0 %} is-active{% endif %}">
          <div id="tab-{{ key }}" class="tabs__content">
            <p>{{ listItem.excerpt.medium }}</p>
          </div>
        </div>
      {% endfor %}
    {% endblock %}
  </div>
{% endif %}
