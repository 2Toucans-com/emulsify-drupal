{#
/**
 * Available variables:
 * - hero_base_class - base classname of the wrapper
 * - hero_modifiers - array of modifiers to add to the base classname of the wrapper
 * - hero_blockname - blockname prepended to the base classname of the wrapper(s) and each component
 *
 */
#}
{% set hero__base_class = 'hero' %}

<div {{ bem(hero__base_class, hero__modifiers, hero__blockname) }}>
  <div {{ bem('image', hero__modifiers, hero__base_class) }}>
    {% block hero__img %}
      {% include "@atoms/images/image/responsive-image.twig" with {
        image_src: hero__img_src,
        image_alt: hero__img_alt,
        image_blockname: hero__base_class,
        output_image_tag: hero__image_output_image_tag,
      } %}
    {% endblock %}
  </div>
  <div {{ bem('copy', hero__copy_modifiers, hero__base_class) }}>
  {% block hero__title_block %}
    {% include "@atoms/text/headings/_heading.twig" with {
      heading_level: 1,
      heading: hero__title,
      heading_blockname: hero__heading_blockname|default(hero__base_class),
    } %}
  {% endblock %}
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: 2,
    heading: hero__subtitle,
    heading_blockname: hero__heading_blockname|default(hero__base_class),
  } %}
  </div>
</div>
